<% if can? :manage,  Article %> <%= link_to 'new', new_article_path %> <% end %>
<% @articles.each do |article| %>	

<div class="box">
<% if can? :manage,  Article %> <%= link_to 'edit', edit_article_path(article) %> <%= link_to 'delete' , article_path(article) , method: 'delete' %> <% end %>
<p><%= article.title.html_safe %></p>
<p><%= article.content.html_safe %></p>
</div>
<div class="clear"></div>
<br>
<% end %>